<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
 "http://www.springframework.org/dtd/spring-beans.dtd"> 
<beans>
    <bean id="provider" class="com.apurav.springhistory.service.HelloWorldMessageProvider"/>
    <bean id="renderer" class="com.apurav.springhistory.service.StandardOutMessageRenderer">
        <property name="messageProvider">
        	<ref local="provider"/>
        </property>
    </bean>
</beans>